<% if @over_ten %>
  <%= link_to '以前のメッセージ', '?m=all' %>
<% end %>

<br>

<div class="container">
  <h2 class="card center-title"><%= "#{@conversation.target_user(current_user).name}さんとのチャット" %></h2>
  <div id ='messages'>
    <ul class="list-group message-main" id='message-area'>
    <%= render @messages %>
    </ul>
  </div>
  <form class='form-inline'>
    <div class='form-group'>
      <input type="text" class="form-control" id='chat-input' autofocus/>
    </div>
    <br><br><br>
    <button id="button" class="btn btn-primary">送信</button>
  </form>
</div>