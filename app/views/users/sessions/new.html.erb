<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<!-- Main navigation -->
  <!-- Full Page Intro -->
  <section style="background-image: url('http://ddragon.leagueoflegends.com/cdn/img/champion/splash/Diana_11.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;" class='back-image'>
    <!-- Mask & flexbox options-->
    <div class="mask d-flex justify-content-center align-items-center ">
      <!-- Content -->
      <div class="container py-5 my-5">
        
        <h3 class="font-weight-bold text-center white-text pb-2">Sign in</h3>
        <p class="lead text-center white-text pt-2 mb-5"></p>
        
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center">
          <!--Grid column-->
          <div class="col-md-6 col-xl-5">
            <!--Form-->
            <div class="card">
              <div class="card-body z-depth-2 px-4 session-card">
                <!-- Name -->
                <div class="md-form mt-3">
                  <i class="fa fa-user prefix grey-text"></i>
                  <label for="defaultLoginFormId">Your name</label>
                  <%= f.text_field :login, autocomplete: "off", autofocus: "true", class: "form-control session-form", id: "defaultLoginFormId" %>
                </div>
                <!-- password -->
                <div class="md-form">
                  <i class="fas fa-key prefix grey-text"></i>
                  <label for="defaultLoginFormPassword">Your password</label>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control session-form", id: "defaultLoginFormPassword" %>
                </div>

                <div class="d-flex justify-content-around">
                  <div>
                    <!-- Remember me -->
                    <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, id: 'remember_me'%>
                    <% end %>
                  </div>
                    <div>
                      <!-- Forgot password -->
                      <p><a href="/users/password/new">パスワードを忘れた場合</a></p>
                      <p><a href="/users/confirmation/new">確認用メールが届かない</a></p>
                    </div>
                  </div>
                <div class="text-center my-3">
                  <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
  </section>
<% end %>
