<%= search_form_for @search_user, url: user_search_path do |form| %>

<!-- Main navigation -->
  <!-- Full Page Intro -->
  <section style="background-image: url('http://ddragon.leagueoflegends.com/cdn/img/champion/splash/Ahri_17.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;" class='back-image'>
    <!-- Mask & flexbox options-->
    <div class="mask d-flex justify-content-center align-items-center">
      <!-- Content -->
      <div class="container py-5 my-5">
        <h3 class="font-weight-bold text-center white-text pb-2 ">ユーザー検索！</h3>  
        
        <p class="lead text-center white-text pt-2 mb-5"></p>
        
        <!--Grid row-->
        <div class="row d-flex align-items-center justify-content-center">
          <!--Grid column-->
          <div class="col-md-6 col-xl-5">
            <!--Form-->
            <div class="card">
              <div class="card-body z-depth-2 px-4 board-card">
            <!-- グループ名 -->
            <div class="md-form mt-3">
              <i class="fas fa-pencil-alt prefix cyan-text "></i>
              
            <label for="user-search1">ユーザー名</label>
              <%= form.search_field :name_cont, autocomplete: "off", class: "form-control session-form", id: "user-search1" %>
        
            
                <div class="text-center my-3">
                  <button class="btn btn-secondary btn-block my-4" type="submit">検索！</button>
                </div>
            </div>
              </div>
            </div>
            <!--/.Form-->
          </div>
          <!--Grid column-->
        </div>
        <br><br>
        <div class="card" id="user_search_result">
          <div class="row">
            <% if @user.present? %>
              <% @user.each do |u| %>
                <div class="col-3 search_response">
                  <% if u.avater.attached? %>
                    <p><%= image_tag u.avater, size: '60x60' %>
                  <% else %>
                    <p><%= image_tag 'no_image', size: '60x60' %>
                  <% end %>
                  <%= link_to u.name, user_path(u.id) %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <!--Grid row-->
      </div>
      <!-- Content -->
    </div>
    <br>
    <!-- Mask & flexbox options-->
    <br><br><br><br>
  </section>
  <!-- Full Page Intro -->
<!-- Main navigation -->
<% end %>

